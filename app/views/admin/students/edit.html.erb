<h3>生徒情報編集</h3>

<%= form_with model: @student, url:edit_admin_student_path(@student.id)  do |f| %>
  <table>
    <tr>
      <th><%= f.label :student_code ,"学籍番号" %></th>
      <td><%= f.text_field :student_code %></td>
    </tr>

    <tr>
      <th><%= f.label :grade ,"学年" %></th>
      <td><%= f.text_field :grade %></td>
    </tr>

    <tr>
      <th><%= f.label :name ,"名前" %></th>
      <td><%= f.text_field :name %></td>
    </tr>

    <tr>
      <th class = radio><%= f.label :alias ,"男性"  %></th>
      <td class = radio><%= f.radio_button :alias, :male %></td>
      <th class = radio><%= f.label :alias ,"女性"  %></th>
      <td class = radio><%= f.radio_button :alias, :female %></td>
    </tr>

    <tr>
      <th><%= f.label :birth ,"生年月日" %></th>
      <td><%= f.date_select :birth, use_month_numbers: true, start_year: 1930, end_year: (Time.now.year - 10), default: Date.new(1989, 1, 1) %></td>
    </tr>

    <tr>
      <th><%= f.label :admission ,"入学日" %></th>
      <td><%= f.date_select :admission, use_month_numbers: true, start_year: (Time.now.year - 3), end_year: Time.now.year, default: Date.today %></td>
    </tr>

    <tr>
      <th><%= f.label :email ,"メールアドレス" %></th>
      <td><%= f.text_field :email %></td>
    </tr>
  </table>

  <div>
    <ul>
      <li><%= f.submit "編集を完了する"%></li>
      <li><%= link_to "生徒情報一覧に戻る", :admin_students %></li>
    </ul>
  </div>
<% end %>